# Environment Variables Template
# Copy to .env.local for local development (DO NOT COMMIT .env)
# Generate new secrets for production!

# Core Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://localhost:5432/ticketapp
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis (optional)
REDIS_URL=redis://localhost:6379

# Google OAuth - Required for authentication
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Security Secrets - Generate strong random strings
# Use: openssl rand -hex 32
SESSION_SECRET=your-32-character-session-secret-minimum
JWT_SECRET=your-32-character-jwt-secret-minimum
JWT_EXPIRES_IN=7d

# Application URLs
APP_URL=http://localhost:3000
API_URL=http://localhost:3000/api

# CORS Origins (comma-separated, no spaces)
CORS_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # requests per window

# Security Settings
BCRYPT_ROUNDS=12
SESSION_MAX_AGE=604800000     # 7 days in milliseconds
SESSION_SECURE=false         # Set to true in production with HTTPS

# File Upload
MAX_FILE_SIZE=5242880        # 5MB in bytes
UPLOAD_PATH=./uploads

# Email Configuration (optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=pretty

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Cache Configuration
CACHE_TTL=300                # 5 minutes
CACHE_MAX_SIZE=1000

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_2FA=false
ENABLE_SEED_DATA=true
ENABLE_SWAGGER=true

# External Services (optional)
WEBHOOK_URL=https://yourdomain.com/webhooks
WEBHOOK_SECRET=your-webhook-secret
