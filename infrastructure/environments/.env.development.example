# Deploy development template (runtime values injected by secret manager)
NODE_ENV=development
API_PORT=3001
DATABASE_URL=postgres://postgres:postgres@db-host:5432/ticketdb
CORS_ORIGINS=https://dev.example.com
# Frontend URL should stay at origin/root (no /auth or legacy app-page suffixes).
APP_URL=https://dev.example.com

SESSION_SECRET=CHANGE_ME_SESSION_SECRET
SESSION_MAX_AGE=86400000
SESSION_SECURE=false
JWT_SECRET=CHANGE_ME_JWT_SECRET
JWT_EXPIRES_IN=7d
JWT_ACCESS_SECRET=CHANGE_ME_JWT_ACCESS_SECRET
JWT_ACCESS_EXPIRES_IN=15m

GOOGLE_CLIENT_ID=CHANGE_ME_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=CHANGE_ME_GOOGLE_CLIENT_SECRET
GOOGLE_CALLBACK_URL=https://dev.example.com/api/auth/google/callback

DATABASE_POOL_MIN=1
DATABASE_POOL_MAX=10
REDIS_URL=redis://localhost:6379
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
BCRYPT_ROUNDS=10
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
LOG_LEVEL=debug
LOG_FORMAT=pretty
ENABLE_METRICS=true
METRICS_PORT=9090
CACHE_TTL=300
CACHE_MAX_SIZE=1000
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_2FA=false
ENABLE_SEED_DATA=false
ENABLE_SWAGGER=true
