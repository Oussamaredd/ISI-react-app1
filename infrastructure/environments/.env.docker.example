# Docker dev template (copy to infrastructure/environments/.env.docker)
NODE_ENV=development
API_PORT=3001
DATABASE_URL=postgres://postgres:postgres@ticket_db:5432/ticketdb

POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ticketdb

SESSION_SECRET=CHANGE_ME_SESSION_SECRET
JWT_SECRET=CHANGE_ME_JWT_SECRET
JWT_EXPIRES_IN=7d
JWT_ACCESS_SECRET=CHANGE_ME_JWT_ACCESS_SECRET
JWT_ACCESS_EXPIRES_IN=15m
GOOGLE_CLIENT_ID=CHANGE_ME_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=CHANGE_ME_GOOGLE_CLIENT_SECRET
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# Frontend URL should stay at origin/root (no /auth or legacy app-page suffixes).
CLIENT_ORIGIN=http://localhost:3000
APP_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

MIGRATE_COMMAND=npm run db:migrate --workspace=ecotrack-database
ENABLE_SEED_DATA=false
SEED_COMMAND=npm run db:seed --workspace=ecotrack-database

TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
ENABLE_LOGSTASH=false
LOGSTASH_HOST=logstash
LOGSTASH_PORT=5001
ELASTIC_URL=http://elasticsearch:9200
