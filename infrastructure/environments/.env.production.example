# Deploy production template (runtime values injected by secret manager)
NODE_ENV=production
API_PORT=3001
DATABASE_URL=postgres://postgres:postgres@db-host:5432/ticketdb
CORS_ORIGINS=https://app.example.com
APP_URL=https://app.example.com

SESSION_SECRET=CHANGE_ME_SESSION_SECRET
SESSION_MAX_AGE=86400000
SESSION_SECURE=true
JWT_SECRET=CHANGE_ME_JWT_SECRET
JWT_EXPIRES_IN=7d

GOOGLE_CLIENT_ID=CHANGE_ME_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=CHANGE_ME_GOOGLE_CLIENT_SECRET

DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=50
REDIS_URL=redis://prod-redis:6379
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
BCRYPT_ROUNDS=12
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
LOG_LEVEL=warn
LOG_FORMAT=json
ENABLE_METRICS=true
METRICS_PORT=9090
CACHE_TTL=300
CACHE_MAX_SIZE=5000
ENABLE_REGISTRATION=false
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=true
ENABLE_SEED_DATA=false
ENABLE_SWAGGER=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=CHANGE_ME_SMTP_USER
SMTP_PASS=CHANGE_ME_SMTP_PASS
EMAIL_FROM=no-reply@example.com
WEBHOOK_URL=https://hooks.example.com/prod
WEBHOOK_SECRET=CHANGE_ME_WEBHOOK_SECRET
