{
  "dashboard": {
    "id": null,
    "title": "Application Overview",
    "tags": ["ticketapp", "overview"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "gnetId": null,
    "graphTooltip": 0,
    "hideControls": false,
    "links": [],
    "refresh": "30s",
    "rows": [
      {
        "collapse": false,
        "height": "250px",
        "panels": [
          {
            "title": "Request Rate",
            "type": "graph",
            "targets": [
              {
                "expr": "rate(http_requests_total{job=\"ticketapp\"}[5m])",
                "legendFormat": "{{method}} {{status}}"
              }
            ],
            "gridPos": {
              "h": 8,
              "w": 12,
              "x": 0,
              "y": 0
            },
            "id": 1
          },
          {
            "title": "Response Time",
            "type": "graph",
            "targets": [
              {
                "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"ticketapp\"}[5m]))",
                "legendFormat": "95th percentile"
              },
              {
                "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"ticketapp\"}[5m]))",
                "legendFormat": "50th percentile"
              }
            ],
            "gridPos": {
              "h": 8,
              "w": 12,
              "x": 12,
              "y": 0
            },
            "id": 2
          }
        ],
        "title": "API Metrics"
      },
      {
        "collapse": false,
        "height": "250px",
        "panels": [
          {
            "title": "Error Rate",
            "type": "graph",
            "targets": [
              {
                "expr": "rate(http_requests_total{job=\"ticketapp\",status=~\"4..\"}[5m])",
                "legendFormat": "4xx errors"
              },
              {
                "expr": "rate(http_requests_total{job=\"ticketapp\",status=~\"5..\"}[5m])",
                "legendFormat": "5xx errors"
              }
            ],
            "gridPos": {
              "h": 8,
              "w": 12,
              "x": 0,
              "y": 8
            },
            "id": 3
          },
          {
            "title": "Active Users",
            "type": "stat",
            "targets": [
              {
                "expr": "ticketapp_active_users_total",
                "legendFormat": "Active Users"
              }
            ],
            "gridPos": {
              "h": 8,
              "w": 12,
              "x": 12,
              "y": 8
            },
            "id": 4
          }
        ],
        "title": "User Metrics"
      },
      {
        "collapse": false,
        "height": "250px",
        "panels": [
          {
            "title": "Database Connections",
            "type": "graph",
            "targets": [
              {
                "expr": "pg_stat_database_numbackends",
                "legendFormat": "Active Connections"
              }
            ],
            "gridPos": {
              "h": 8,
              "w": 12,
              "x": 0,
              "y": 16
            },
            "id": 5
          },
          {
            "title": "Ticket Metrics",
            "type": "graph",
            "targets": [
              {
                "expr": "rate(ticketapp_tickets_created_total[5m])",
                "legendFormat": "Tickets Created/sec"
              },
              {
                "expr": "rate(ticketapp_tickets_resolved_total[5m])",
                "legendFormat": "Tickets Resolved/sec"
              }
            ],
            "gridPos": {
              "h": 8,
              "w": 12,
              "x": 12,
              "y": 16
            },
            "id": 6
          }
        ],
        "title": "Business Metrics"
      }
    ],
    "schemaVersion": 14,
    "version": 0,
    "templating": {
      "list": []
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "annotations": {
      "list": []
    }
  }
