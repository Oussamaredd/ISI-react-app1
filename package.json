{
  "name": "react-app1",
  "version": "1.0.0",
  "description": "Four-layer ticket management monorepo",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "npm run build:database && concurrently -n app,api \"npm:dev:app\" \"npm:dev:api\"",
    "dev:app": "npm run dev --workspace=react-app1-app",
    "dev:api": "npm run dev --workspace=react-app1-api",
    "dev:database": "npm run watch --workspace=react-app1-database",
    "dev:infra": "npm run infra:up",
    "build": "npm run build:database && npm run build:app && npm run build:api",
    "build:app": "npm run build --workspace=react-app1-app",
    "build:api": "npm run build --workspace=react-app1-api",
    "build:database": "npm run build --workspace=react-app1-database",
    "test": "npm run test:app && npm run test:api",
    "test:app": "npm run test --workspace=react-app1-app",
    "test:api": "npm run test --workspace=react-app1-api",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "lint": "npm run lint:app && npm run lint:api",
    "lint:app": "npm run lint --workspace=react-app1-app",
    "lint:api": "npm run lint --workspace=react-app1-api",
    "typecheck": "npm run typecheck:app && npm run typecheck:api && npm run typecheck:database",
    "typecheck:app": "npm run typecheck --workspace=react-app1-app",
    "typecheck:api": "npm run typecheck --workspace=react-app1-api",
    "typecheck:database": "npm run typecheck --workspace=react-app1-database",
    "db:migrate": "npm run db:migrate --workspace=react-app1-database",
    "db:generate": "npm run db:generate --workspace=react-app1-database",
    "db:push": "npm run db:push --workspace=react-app1-database",
    "db:seed": "npm run db:seed --workspace=react-app1-database",
    "db:migrate:seed": "npm run db:migrate:seed --workspace=react-app1-database",
    "infra:up": "npm run docker:dev --workspace=react-app1-infrastructure",
    "infra:down": "npm run docker:down --workspace=react-app1-infrastructure",
    "infra:health": "npm run health --workspace=react-app1-infrastructure"
  },
  "workspaces": [
    "app",
    "api",
    "database",
    "infrastructure"
  ],
  "overrides": {
    "esbuild": "0.25.0",
    "lodash": "4.17.23"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "concurrently": "^8.2.2"
  }
}
