{
  "name": "react-app1",
  "version": "1.0.0",
  "description": "Four-layer ticket management monorepo",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "npm run build --workspace=react-app1-database && concurrently -n app,api \"npm:dev:app\" \"npm:dev:api\"",
    "dev:app": "npm run dev --workspace=react-app1-app",
    "dev:api": "npm run dev --workspace=react-app1-api",
    "build": "npm run build --workspace=react-app1-database && npm run build --workspace=react-app1-app && npm run build --workspace=react-app1-api",
    "test": "npm run test --workspace=react-app1-app && npm run test --workspace=react-app1-api",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "lint": "npm run lint --workspace=react-app1-app",
    "typecheck": "npm run typecheck --workspace=react-app1-app && npm run typecheck --workspace=react-app1-api && npm run typecheck --workspace=react-app1-database",
    "db:migrate": "npm run db:migrate --workspace=react-app1-database",
    "db:generate": "npm run db:generate --workspace=react-app1-database"
  },
  "workspaces": [
    "app",
    "api",
    "database",
    "infrastructure"
  ],
  "overrides": {
    "esbuild": "0.25.0",
    "lodash": "4.17.23"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "concurrently": "^8.2.2"
  }
}
